<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
<!--
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:text="Home"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_gravity="top"
        android:background="@color/teal_200"/>
-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="900px"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="welcome"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="5dp"
        android:background="@color/lavender" />


    <Button
        android:id="@+id/addzone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="노키즈존 등록"
        android:layout_gravity="center"
        android:backgroundTint="#5599FF"
        android:textSize="25dp" />
    <Button
        android:id="@+id/searchzone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="노키즈존 지도"
        android:layout_gravity="center"
        android:backgroundTint="#66BB55"
        android:textSize="25dp" />
    <Button
        android:id="@+id/mydiary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="여행 블로그"
        android:layout_gravity="center"
        android:backgroundTint="@color/pink"
        android:textSize="25dp" />
    <Button
        android:id="@+id/logOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="카카오 로그아웃"
        android:layout_gravity="center"
        android:backgroundTint="#FFED22"
        android:textSize="25dp"
        android:textColor="#884433"/>

</LinearLayout>